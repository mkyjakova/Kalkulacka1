<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.martinakyjakova.kalkulacka.MainActivity">

    <EditText
        android:id="@+id/main_cislo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="napis cislo"
        android:inputType="textPersonName"
        android:layout_marginRight="153dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/main_cislo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="napis cislo"
        android:inputType="textPersonName"
        android:layout_marginRight="153dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/main_cislo1" />

    <Button
        android:id="@+id/main_buttonMinus"
        android:layout_width="61dp"
        android:layout_height="0dp"
        android:layout_marginBottom="298dp"
        android:layout_marginLeft="61dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/main_buttonPlus" />

    <Button
        android:id="@+id/main_buttonKrat"
        android:layout_width="61dp"
        android:layout_height="0dp"
        android:layout_marginBottom="298dp"
        android:layout_marginLeft="122dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/main_buttonPlus" />

    <Button
        android:id="@+id/main_buttonDeleno"
        android:layout_width="61dp"
        android:layout_height="48dp"
        android:layout_marginBottom="298dp"
        android:layout_marginLeft="183dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/main_buttonPlus" />

    <Button
        android:id="@+id/main_buttonPlus"
        android:layout_width="61dp"
        android:layout_height="48dp"
        android:layout_marginBottom="298dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_cislo2"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:text="Cislo 1"
        app:layout_constraintBottom_toBottomOf="@+id/main_cislo1"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:text="Cislo 2"
        app:layout_constraintBottom_toBottomOf="@+id/main_cislo2"
        tools:layout_editor_absoluteX="16dp" />

</android.support.constraint.ConstraintLayout>
